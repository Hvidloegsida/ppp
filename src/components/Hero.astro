---
import Box from "../components/Box.astro"
---
<section class="flex flex-col items-center justify-center min-h-screen md:flex-row">
    <div class="flex flex-row md:flex-col-reverse items-center justify-center ml-[15%]">
        <img src="/mig.png" alt="Image" class="w-56 h-auto mr-auto ml-[15%] sm:mx-0 md:mr-4 md:-ml-[40%] md:w-[36rem] md:max-w-[230%]">

        <h1 class="font-good text-pink -ml-[27%] text-5xl mb-[11rem] leading-[4.5rem] transform rotate-90 md:rotate-0 md:-translate-x-0 md:flex md:flex-col md:text-[90px] md:absolute md:leading-[8.5rem] md:top-[2rem] md:right-[2.5rem] lg:text-[120px]">
            IDA <span class="ml-[3.8rem] sm:ml-0">MIKKELSEN</span>
        </h1>
    </div>
  <div class="md:ml-[5%] md:mt-[30%]">
    <Box ></Box></div>
</section>



<style>
    @media (min-width: 768px) { /* assuming md is 768px */
    h1 {
        margin-left: 0;
        margin-right: 0;
        text-align: center;
    }
}
</style>